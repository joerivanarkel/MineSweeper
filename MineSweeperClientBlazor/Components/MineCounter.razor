@page "/MineCounter"

<style>
    .AmountOfMines
    {
        padding: 20px;
        margin-left: 2px;
        width: 80px;
        height: 80px;
        border: solid 1px gray
    }
    .AmountOfMinesTime
    {
        padding: 20px;
        margin-left: 2px;
        width: 160px;
        height: 80px;
        border: solid 1px gray
    }
    .AmountOfMinesNumber
    {
        font-size: 40px;
        font-weight: bolder;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }


}

</style>
<div class="AmountOfMines ">
    <div class="AmountOfMinesNumber">@AmountOfMinesLeft</div>
</div>


@code {
    [Parameter]
    public int AmountOfMinesLeft { get; set; }
}